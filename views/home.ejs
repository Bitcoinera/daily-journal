<%- include("partials/header") -%>

<div class=container>
    <h1>Welcome! This is my blog</h1>

    <p>
        <%= content%>
    </p>
</div>

<% posts.forEach(function(post) {%>
    <div class="container">
        <h1><a style="color: #212529" href="/posts/<%= post.title %>"><%= post.title %></a></h1>
        <% if(post.post.length > 100) { %>
        <p><%= post.post.substring(0, 99)%>...<a href="/posts/<%= post.title %>"> Read More</a></p>
        <% } else { %>
        <p><%= post.post%></p>
        <% } %>
    </div>
<% }) %>

<div class="container">
    <form action="/compose" method="GET">
        <button class="btn btn-primary" type="submit" name="button">Compose</button>
    </form>
</div>

<div class="relative">
<%- include("partials/footer") -%>
</div>